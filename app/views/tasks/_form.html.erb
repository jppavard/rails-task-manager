
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Title' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details, 'details' %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <% if @task.id %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
